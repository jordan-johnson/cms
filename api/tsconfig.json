{
  "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "declaration": true,
      "strict": true,
      "pretty": true,
      "baseUrl": "./src",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "release/app/dist"
  }
}